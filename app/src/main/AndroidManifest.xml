<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stimednp.fooddrinkcustomer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".FoodDrinkApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodDrink">
        <activity
            android:name=".ui.keranjang.CartActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".ui.detailpoduct.DetailProductActivity" />
        <activity
            android:name=".ui.main.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity
            android:name=".ui.scanner.ScannerActivity"
            android:theme="@style/Theme.Scanner" />
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>